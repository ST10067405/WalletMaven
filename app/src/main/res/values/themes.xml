<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.WalletMaven" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColorVariant</item>
        <item name="colorOnPrimary">@color/onPrimaryColor</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColorVariant</item>
        <item name="colorOnSecondary">@color/onSecondaryColor</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/backgroundColorLight</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/statusNav</item>
        <item name="android:windowLightStatusBar">false</item> <!-- Set text icons to dark -->

        <!-- Android Nav bar color -->
        <item name="android:navigationBarColor">@color/statusNav</item>
    </style>
</resources>
